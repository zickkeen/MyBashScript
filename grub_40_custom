                search --no-floppy --fs-uuid --set=root SET_YOUR_UUID_HERE
        fi
        linux /android/kernel root=/dev/ram0 androidboot.selinux=permissive DPI=160 UVESA_MODE=1366Ã—768 SRC=/android DATA=/data
